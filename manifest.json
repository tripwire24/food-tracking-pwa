{
  "name": "NutriTrack - Smart Food Tracker",
  "short_name": "NutriTrack",
  "description": "AI-powered nutrition tracking with smart food recognition",
  "version": "2.0.0",
  "start_url": "./index.html",
  "scope": "./",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#5B21B6",
  "background_color": "#F9FAFB",
  "lang": "en",
  "dir": "ltr",
  "categories": ["health", "lifestyle", "productivity"],
  
  "icons": [
    {
      "src": "./public/icons/icon-72x72.svg",
      "sizes": "72x72",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-96x96.svg",
      "sizes": "96x96",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-128x128.svg",
      "sizes": "128x128",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-144x144.svg",
      "sizes": "144x144",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-152x152.svg",
      "sizes": "152x152",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-384x384.svg",
      "sizes": "384x384",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "./public/icons/apple-touch-icon.svg",
      "sizes": "180x180",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  
  "shortcuts": [
    {
      "name": "Quick Capture",
      "short_name": "Capture",
      "description": "Quickly capture food with camera",
      "url": "/#capture",
      "icons": [
        {
          "src": "/public/icons/shortcut-camera.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Stats",
      "description": "View nutrition dashboard",
      "url": "/#dashboard",
      "icons": [
        {
          "src": "/public/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "screenshots": [
    {
      "src": "/assets/screenshots/mobile-home.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "mobile",
      "label": "Home screen showing daily summary"
    },
    {
      "src": "/assets/screenshots/mobile-capture.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "mobile",
      "label": "Food capture interface"
    },
    {
      "src": "/assets/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Nutrition dashboard with charts"
    }
  ],
  
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+foodtracker",
      "url": "/?action=share&data=%s"
    }
  ],
  
  "share_target": {
    "action": "/?share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "media",
          "accept": ["image/*"]
        }
      ]
    }
  }
}